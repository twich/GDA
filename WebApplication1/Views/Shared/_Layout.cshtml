<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8"/>

    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>

<body>
    <div data-role="page">

        <div data-role="panel" id="assgn-panel">
            <h2>Menu</h2>
            <ul data-role="listview" data-inset="true">
                <li>@Html.ActionLink("Search", "Index", "Home", null, new { data_icon = "search" })</li>
                <li><a href="#assgn-panel" data-icon="grid">Assignments</a></li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { data_icon = "mail" })</li>
            </ul>
        </div>

        <div data-role="header">
            <h1>@ViewBag.title</h1>
        </div>

        <div data-role="main" class="ui-content">
            @RenderBody()
        </div>

        <div data-role="footer" data-position="fixed">
            <div data-role="navbar">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { data_icon = "home" })</li>
                    <li><a href="#assgn-panel" data-icon="grid">Assignments</a></li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home",null,new { data_icon = "mail" })</li>
                </ul>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerymobile")
</body>

</html>
